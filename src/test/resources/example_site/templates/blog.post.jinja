{% extends "base.jinja" %}
{% block main_body %}
<div class="posts">
    <section class="post">
        <header class="post-header">
            <h2 class="post-title">{{ page.title }}</h2>
            <div class="post-byline">{% if post.author %}by {{ post.author }} at{% endif %} {{ utils.formatLocalDate(post.publishDate) }}</div>
        </header>
        <div class="post-description">
            {{ page.content }}
        </div>
    </section>
</div><!--end posts-->
<section class="comments">
    {% comments_section %}
</section>
{% endblock %}
